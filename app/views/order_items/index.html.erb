<section class="OrderItem">
  <p id="notice"><%= notice %></p>

  <h1 class="OrderItem-title">Order Items</h1>

  <p class="Back-link"> <%= link_to 'Back', :back %> </p>
  <table class="Table">
    <thead>
      <tr>
        <th>Menu item name</th>
        <th>Menu item price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.menu_item_name %></td>
          <td><%= order_item.menu_item_price %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order_item.total %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="OrderItem-total"> Total Amount = <%= @amount %> </h2>

</section>