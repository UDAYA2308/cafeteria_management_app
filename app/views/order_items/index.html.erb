<section class="OrderItem">
  <p id="notice"><%= notice %></p>

  <div class="Invoice-details">
    <h1>Invoice</h1>
    <h3>Date : <%= @user_data['date'] %> </h3>
    <h3>Order Id : <%= params[:order_id] %> </h3>
    <h3>Name : <%= @user_data['name'] %> </h3>
    <h3>Email : <%= @user_data['email'] %> </h3>
  </div>
  <p class="Back-link"> <%= link_to 'Back', :back %> </p>
  <table class="Table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Unit price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.menu_item_name %></td>
          <td><%= order_item.menu_item_price %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order_item.total %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="OrderItem-total"> Total Amount = <%= @amount %> </h2>

</section>