<section class="MenuItem">
  <h5 id="notice"><%= params[:notice] %></h5>

  <p class="Menu-label">
    <strong>Menu:</strong>
    <%= @menu_item.menu.menu_name%>
  </p>

  <p class="Menu-label">
    <strong>Menu item name:</strong>
    <%= @menu_item.menu_item_name %>
  </p>

  <p class="Menu-label">
    <strong>Menu item price:</strong>
    <%= @menu_item.menu_item_price %>
  </p>

  <p class="Menu-label">
    <strong>Image :</strong>
    <img src='<%= @menu_item.image_url %>' class="MenuItem-image" alt='Image of <%= @menu_item.menu_item_name %>' />
  </p>

  <%= link_to 'Edit', edit_menu_item_path(@menu_item,:current_menu_id => @current_menu_id) %> |
  <%= link_to 'Back', menu_items_path(:current_menu_id => @current_menu_id) %>
</section>