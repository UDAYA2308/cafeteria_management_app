 <section class="MenuItem-section">

    <h3 id="notice"><%= params[:notice] %></h3>

    <% if @current_user.role =="owner"%>
      <h3 > Select Menu </h3> 
      <%= render partial: "select_menu",
          locals: { 
              menu_id: @current_menu_id
          } 
      %>
    <% end %>

    <h1>Menu Items</h1>

    <table class="Table">
      <thead>
        <tr>
          <th>Menu item name</th>
          <th>Menu item price</th>
          <th>Image url</th>
          <% if @current_user.role == "owner"%>
            <th colspan="3">Options</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @menu_items.each do |menu_item| %>
          <tr>
            <td><%= menu_item.menu_item_name %></td>
            <td><%= menu_item.menu_item_price %></td>
            <td><%= menu_item.image_url %></td>
            <% if @current_user.role == "owner"%>
              <td><%= link_to 'Show', menu_item_path(menu_item, :current_menu_id => @current_menu_id) %></td>
              <td><%= link_to 'Edit', edit_menu_item_path(menu_item,:current_menu_id => @current_menu_id) %></td>
              <td><%= link_to 'Remove', menu_item_path(menu_item,:current_menu_id => @current_menu_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


    <% if @current_user.role =="owner"%>
      <%= link_to 'New Menu Item', 
          new_menu_item_path(:current_menu_id => @current_menu_id)
      %>
    <% end %>

</section>