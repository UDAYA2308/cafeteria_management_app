<p id="notice"><%= params[:notice] %></p>

<h1>Orders</h1>

<table class="Table">
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Delivered at</th>
      <th>Amount</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.first_name %></td>
        <td><%= order.date %></td>
        <td><%= order.delivered_at %></td>
        <td><%= @totals[order.id] %></td>
        <td><%= link_to 'Show', order_items_path(order_id: order.id) %></td>
        <% if (not(@current_user.role == "customer")) and @your_order %>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<section class="Report-section">
  <p class="Report-label"> Total Orders : <%= @count %> </p>
  <p class="Report-label"> Total Amount : <%= @sum %> </p>
</section>